<div class="ui inverted segment">
  <div class="ui inverted secondary pointing menu">
    <%= link_to "Home", root_path, class: "active item" %>
    <div class="right menu">
      <% if @current_user %>
        <div class="ui item">
          Welcome back, <%= @current_user.name %>!
        </div>
      <% end %>
      <% if @current_user %>
        <% if @current_user.admin %>
          <%= link_to "Create an airplane", index_airplanes_path, class: "ui item" %>
          <%= link_to "Create a flight", index_flights_path, class: "ui item" %>
        <% end %>
      <% end %>
      <%= link_to "Sign up", new_user_path, class: "ui item" %>
      <%= link_to "Log in", login_path, class: "ui item" %>
      <%= link_to "Log out", logout_path, method: :delete, class: "ui item" %>
    </div>
  </div>
</div>
