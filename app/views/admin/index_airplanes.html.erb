<div class="ui main text container pushable">

  <%= form_tag create_airplanes_path, method: "post", class: "ui form" do %>

    <p>
      <label>Name</label>
      <input id="airplane_name" type="text" name="name" placeholder="name"/>
    </p>
    <p>
      <label>Rows</label>
      <input id="airplane_row" type="number" name="row" min="5" max="10" placeholder="no. of rows - input value from 5 to 10" onchange="handleChange(this, 5, 10);"/>
    </p>
    <p>
      <label>Columns</label>
      <input id="airplane_column" type="number" name="column" min="20" max="50" placeholder="no. of cols - input value from 20 to 50" onchange="handleChange(this, 20, 50);"/>
    </p>
    <p>
      <input id="airplane_create" type="submit" value="Create" class="ui button"/>
    </p>


  <% end %>



